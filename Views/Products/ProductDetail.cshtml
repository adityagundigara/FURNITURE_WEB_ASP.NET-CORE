@using FURNITURE_WEB.Models
@model FURNITURE_WEB.Models.ChairDataModel


<!DOCTYPE html>
<html>
<head>
    <title>Product Detail</title>

</head>
<body>

    <div class="ProductDetail">
        <img src="~/Images/AllImages/@Model.ImagePath" class="detail-img">
        <h5 class="detail-title">@Model.Name</h5>
        <p>₹@Model.Price</p>

        <form asp-controller="Products" asp-action="CartPage1" method="post" asp-route-id="@Model.Id">
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="hidden" name="productName" value="@Model.Name" />
            <input type="hidden" name="productPrice" value="@Model.Price" />
            <label for="Quantity">Quantity:</label>
            <input type="number" id="Quantity" name="Quantity" value="1" min="1" required />
            <button type="submit">Add to Cart</button>
        </form>

    </div>

</body>
</html>






